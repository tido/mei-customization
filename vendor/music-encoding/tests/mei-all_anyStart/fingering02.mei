<!-- Gould, Behind Bars, p. 309, ex. 2 -->
<!-- Piano fingering / substitutions -->
<!-- @staff has not been encoded for ease of parsing, but it should be present. -->
<section xmlns="http://www.music-encoding.org/ns/mei"
  xmlns:mei="http://www.music-encoding.org/ns/mei" xmlns:xlink="http://www.w3.org/1999/xlink">
  <measure n="1">
    <staff n="1">
      <layer n="1">
        <note dur="2"/>
        <note dur="8"/>
        <note dur="8"/>
      </layer>
      <layer n="2">
        <rest dur="16"/>
        <note dur="4"/>
        <note dur="4"/>
      </layer>
      <layer n="3">
        <note dur="8" xml:id="n1"/>
        <note dur="8" xml:id="n2"/>
        <note dur="8" xml:id="n3"/>
      </layer>
    </staff>
    <!-- When each <fing> starts (or ends) at a different time, use @tstamp to set the start/end times.
      In this case, @tstamp must occur on all sibling <fing> elements and NOT on the parent <fingGrp>. 
      @tstamp2 can be used to explicitly provide individual endpoints for any extending lines. -->
    <fingGrp>
      <fing tstamp="1" extender="true" lform="solid" lwidth="narrow" tstamp2="2.41">5</fing>
      <fing tstamp="2.5">3</fing>
      <fing tstamp="3">4</fing>
    </fingGrp>
    <fingGrp place="above">
      <fing tstamp="1.5">4</fing>
      <fing tstamp="3">2</fing>
    </fingGrp>
  </measure>
  <measure n="2">
    <staff n="1">
      <layer n="1">
        <note dur="16"/>
        <note dur="16"/>
        <note dur="16"/>
        <note dur="16"/>
        <note dur="8"/>
        <note dur="8"/>
        <note dur="16"/>
        <note dur="16"/>
        <note dur="16"/>
        <note dur="16"/>
      </layer>
      <layer n="2">
        <note dur="2" dots="1"/>
      </layer>
    </staff>
    <!-- In a finger substitution, the endpoint of the extending line can be omitted, as it must end
      just before the start time of the 2nd indication. -->
    <fingGrp form="subst">
      <fing tstamp="1" extender="true">1</fing>
      <fing tstamp="3.75">2</fing>
    </fingGrp>
    <fingGrp>
      <fing tstamp="1.25">3</fing>
      <fing tstamp="3">5</fing>
      <fing tstamp="3.5">5</fing>
      <fing tstamp="3.75">4</fing>
    </fingGrp>
  </measure>
  <measure n="3">
    <staff n="1">
      <layer n="1">
        <chord dur="8"/>
        <rest dur="8"/>
        <chord dur="4"/>
        <chord dur="8" dots="1"/>
        <note dur="16"/>
      </layer>
      <layer n="2">
        <note dur="4" tie="i"/>
        <note dur="8" tie="t"/>
        <rest dur="8"/>
        <rest dur="4"/>
      </layer>
    </staff>
    <fingGrp tstamp="2">
      <fingGrp form="subst">
        <fing>5</fing>
        <fing>4</fing>
      </fingGrp>
      <fingGrp form="subst">
        <fing>4</fing>
        <fing>3</fing>
      </fingGrp>
      <fingGrp form="subst">
        <fing>3</fing>
        <fing>2</fing>
      </fingGrp>
      <fingGrp form="subst">
        <fing>2</fing>
        <fing>1</fing>
      </fingGrp>
    </fingGrp>
  </measure>
  <measure n="4">
    <staff n="1">
      <layer n="1">
        <note dur="2"/>
        <note dur="8"/>
        <note dur="8"/>
      </layer>
      <layer n="2">
        <rest dur="16"/>
        <note dur="16"/>
        <note dur="8"/>
        <note dur="2"/>
      </layer>
    </staff>
    <fingGrp>
      <fingGrp tstamp="1" form="subst">
        <fing>3</fing>
        <fing>5</fing>
      </fingGrp>
      <fing tstamp="2.5">3</fing>
    </fingGrp>
    <fingGrp tstamp="3" form="alter">
      <fing>3</fing>
      <fing>4</fing>
      <fing>3</fing>
    </fingGrp>
  </measure>
  <measure n="5">
    <staff n="1">
      <layer n="1">
        <chord dur="2" dots="1"/>
      </layer>
      <layer n="2">
        <rest dur="4"/>
        <chord dur="8"/>
        <rest dur="8"/>
        <rest dur="4"/>
      </layer>
    </staff>
    <fingGrp form="subst">
      <fing tstamp="1" extender="true">5</fing>
      <fing tstamp="3.5">4</fing>
    </fingGrp>
    <fingGrp form="subst">
      <fing tstamp="1" extender="true">3</fing>
      <fing tstamp="3">2</fing>
    </fingGrp>
    <fing tstamp="2">1[</fing>
    <fingGrp form="subst">
      <fing tstamp="1" extender="true">2</fing>
      <fing tstamp="2.5">1</fing>
    </fingGrp>
  </measure>
  <measure n="6">
    <staff n="1">
      <layer n="1">
        <note dur="2" dots="1"/>
      </layer>
      <layer n="2">
        <chord dur="2" dots="1"/>
      </layer>
    </staff>
  </measure>
</section>
